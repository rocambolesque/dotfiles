[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    d = difftool
    st = status
    co = checkout
    ci = commit
    br = branch
    p = push
    sl = stash list
    sa = stash apply
    cop = checkout @{-1} # checkout previous branch
[color]
    branch = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow 
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    editor = vim
# pushes current branch by default
[push]
    default = current
